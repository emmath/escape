<body class="city">
<div id="citytitle">
    <h1>City: <em><%= @trip.city %></em><h1>
</div>

<div id="citybody">
 <% @city.each do |show| %>

    <table>
        <thead>
        <tr>
            <th></th>
            <th><%= show["name"] %>, <%= show["starRating"] %> stars</th>
        </tr>
        </thead>
        <tr>
            <td><img src="<%= show["imageUrl"] %>" height="100" width="100"></td>
            <td><%= show["description"] %></td>
        </tr>
        <tr class="price">
            <td></td>
            <td>Price: $<%= show["pricePerNight"] %> each night!</td>
        </tr>
    </table>
  <% end %>
<br>
</div>

<%= link_to 'Back', trips_path %>
</body>
